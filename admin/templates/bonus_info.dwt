<!doctype html>
<html>
<head>{include file ='library/admin_html_head.lbi'}</head>

<body class="iframe_body">
	<div class="warpper">
    	<div class="title"><a href="bonus.php?act=list" class="s-back">{$lang.back}</a>促销 - {$ur_here}</div>
