            //查询
            function get_WholesaleOrderSearch(idTxt, action, type, t, c){
                    
                var keyword, status_keyword, date_keyword;  
                var order = new Object();
                if(t){
                    keyword = $(t).data('id');

                    if(idTxt == 'wholesale_status_list'){
                        $("input[name='wholesale_order_status_list']").val(keyword);
